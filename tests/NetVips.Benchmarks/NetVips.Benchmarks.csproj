<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <OutputType>Exe</OutputType>
    <Optimize>true</Optimize>
    <Platforms>AnyCPU;x64;x86</Platforms>
    <BenchmarkWithNuGetBinaries>true</BenchmarkWithNuGetBinaries>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.11.5" />
    <PackageReference Include="Magick.NET-Q8-AnyCPU" Version="7.13.1" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-dev002724" />
    <PackageReference Include="SkiaSharp" Version="1.68.0" />
    <PackageReference Include="System.Drawing.Common" Version="4.5.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\NetVips\NetVips.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(BenchmarkWithNuGetBinaries)' == 'true'">
    <PackageReference Include="NetVips.Native" Version="8.8.0-rc3" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Images\" />
  </ItemGroup>

  <ItemGroup>
    <ContentWithTargetPath Include="Images\t.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>t.jpg</TargetPath>
    </ContentWithTargetPath>

    <ContentWithTargetPath Include="Images\t.tif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <TargetPath>t.tif</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>

</Project>
